;;; Control-related Tests

(defSuite fibers

  (defTest fiber.1
    (fiber 1 2 (eq? 1 1))
    #t)

  (defTest fiber.2
    (begin
      (def yield-record (fiber 1 2 (+ (fiberYield (eq? 1 1)) 3)))
      (assert#t (type? yield-record YieldRecord))
      (assert#t (eq? #t (getValue yield-record 'value)))
      (assert#t (eq? 33 (fiberResume yield-record 30))))
    #inert)

  (defTest fiber.begin.1
    (runFiber
     (\ ()
       (begin
         (fiberYield 1)
         (fiberYield 2)
         3)))
    '(1 2 3))

  (defTest fiber.begin.2
    (runFiberWithValues
     (\ ()
       (begin
         (fiberYield 1)
         (fiberYield 2)))
     '(#inert 3))
    '(1 2 3))

