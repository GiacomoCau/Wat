   |$(fn object)
   |$(type function)
   |$(derivation (\ (object) (type? object Keyword)))
   |#
  %keyword?)

(def\ (keywordName (#! Keyword keyword))
  #|Return the name of the KEYWORD as a string.
   |$(fn keyword)
   |$(type function)
   |#
