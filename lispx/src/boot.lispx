   |Keyword if STRING start with ':', symbol otherwise
   |$(fn string)
   |$(type function)
   |#
  %intern)

(def name
  #|Return the name of the SYMBOL or KEYWORD as a string.
   |$(fn intern)
   |$(type function)
   |#
  %name)
  
(def keyword
  #|Return the unique keyword with STRING as name.
   |$(fn string)
   |$(type function)
   |#
  %keyword)

(def keyword?
